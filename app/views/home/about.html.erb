<%= render 'shared/header' %>

<div class="row about">

  <div class="col-xs-12 col-sm-12 col-md-12">
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%== message %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-3 col-sm-3 col-md-3">
    <ul class="nav nav-pills nav-stacked">
      <li><a href="#"><%= t :event_introduction %></a></li>
      <li><a href="#"><%= t :audience %></a></li>
      <li><a href="#"><%= t :event_details %></a></li>
      <li><a href="#"><%= t :awards %></a></li>
      <li><a href="#"><%= t :sponsors %></a></li>
      <li class="active"><a href="#"><%= t :signup %></a></li>
    </ul>
  </div>

  <div class="col-xs-9 col-sm-9 col-md-9" id="signup">
    <h4><%= t :event_signup %></h4>

    <%= form_for @user, role: 'form' do |f| %>
      <div class="row">
        <div class="form-group col-xs-5">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control validating', placeholder: t('activerecord.attributes.user.name')  %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-xs-5">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control validating', placeholder: t('activerecord.attributes.user.email') %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-xs-5">
          <%= f.label :organ %>
          <%= f.text_field :organ, class: 'form-control validating', placeholder: t('activerecord.attributes.user.organ')  %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-xs-10">
          <%= f.label :about %>
          <%= f.text_area :about, rows: '5', class: 'form-control validating' %>
          <span class="help-block"><%= t('signup_form.introduce') %></span>
        </div>
      </div>

      <div class="select-role">
        <%= f.label :user_type %>
        <label class="radio">
          <%= f.radio_button :user_type, "coder", :checked => true, data: {toggle: 'radio'} %>
          程序员
        </label>
        <label class="radio">
          <%= f.radio_button :user_type, "designer", data: {toggle: 'radio'} %>
          设计师
        </label>
        <label class="radio">
          <%= f.radio_button :user_type, "pm", data: {toggle: 'radio'} %>
          产品经理
        </label>
        <label class="radio">
          <%= f.radio_button :user_type, "others", data: {toggle: 'radio'} %>
          其他
        </label>
        <div class="row">
          <div class="form-group col-xs-5">
            <%= text_field_tag :other_type, '', class: 'form-control', placeholder: 'Role' %>
          </div>
        </div>
      </div>

      <div class="row personal">
        <div class="form-group col-xs-5 inputs">
          <%= f.label :homepage %>
          <input type="text" name="user[homepage][0]" class='form-control'>
          <a id="add_homepage" href="javascript:void(0)"><%= t('signup_form.new') %></a>
        </div>
      </div>

      <div class="row">
        <%= f.fields_for :attachments do |af| %>
          <div class="form-group col-xs-10">
            <%= af.label :file %>
            <%= af.file_field :file, :multiple => true, :name => "attachments[file][]" %>
            <span class="help-block"><%= t('signup_form.compress_files') %></span>
          </div>
        <% end %>
      </div>

      <%= f.submit t('signup_form.confirm'), class: 'btn btn-primary btn-wide' %>
    <% end %>

  </div>
</div>

