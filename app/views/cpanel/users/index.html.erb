<table  class="table table-hover table-condensed">
  <tr>
    <th>姓名</th>
    <th>角色</th>
    <th>单位/学校</th>
    <th>邮箱</th>
    <th>个人主页</th>
    <th>个人作品</th>
    <th></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.type_name %></td>
      <td><%= user.organ %></td>
      <td><%= user.email %></td>
      <td><%= raw user.homepages %></td>
      <td>
        <%= attachments_for(user) %>
      </td>
      <td>
        <%= link_to '查看详情', cpanel_user_path(user) %>
        <%= link_to '删除报名信息', cpanel_user_path(user), :method => :delete, :data => { :confirm => "确定删除吗?" } %>
      </td>
    </tr>
  <% end %>
</table>

<h4>报名信息导出</h4>
<%= form_tag export_cpanel_users_path do %>
  <%= label_tag '请输入接受报名表的邮箱：' %>
  <%= text_field_tag 'email' %>
  <%= submit_tag "确定" %>
<% end %>
